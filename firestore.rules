rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // التحقق من أن المستخدم مسجل دخول
    function isAuthenticated() {
      return request.auth != null;
    }

    // مجموعة المستخدمين (Users Collection)
    match /users/{userId} {
      // يسمح بإنشاء الملف فقط إذا كان يطابق معرف المستخدم (يمنع إنشاء ملفات لغيرك)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // يسمح بالقراءة والتعديل لأي مستخدم مسجل دخول (لدعم ميزة Caregiver/المتابعة)
      // ملاحظة: يتطلب معرفة User ID للوصول للبيانات
      allow read, update, delete: if isAuthenticated();
    }
    
    // أكواد المزامنة (Short Codes)
    match /shortCodes/{code} {
      // السماح بالقراءة للجميع (لتمكين المرافق الزائر من البحث عن المريض بالكود)
      allow read: if true;
      // الكتابة مسموحة فقط للمستخدمين المسجلين (لإنشاء كود جديد)
      allow write: if isAuthenticated();
    }

    // اختبار الاتصال (Connection Test)
    // مفتوح للجميع للتأكد من أن التطبيق متصل بالإنترنت وقاعدة البيانات تعمل
    match /connection_test/{docId} {
      allow read, write: if true;
    }
  }
}
